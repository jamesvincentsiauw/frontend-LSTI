        #navbarTogglerDemo03.collapse.navbar-collapse
          div(style='margin-left:100px;')
          .navbar-nav
            a.title-nav.nav-item.nav-link.active(href='/jadwaladmin')
              | JADWAL
            a.title-nav.nav-item.nav-link(href='/tes')
              | KELENGKAPAN BERKAS
              
    main.main-margin
      p.title-medium Good Day, ....!
      div(style='margin-top:25px;')
      -function prettyDate(dateString){
        -var date = new Date(dateString);
        -var d = date.getDate(dateString);
        -var monthNames = [ "Januari", "Februari", "Maret", "April", "Mei", "Juni", "Juli", "Agustus", "September", "Oktober", "November", "Desember" ];
        -var m = monthNames[date.getMonth()];
        -var y = date.getFullYear();
        -return d+' '+m+' '+y;
    -} 
        for item in hasil
            .card.w-75
                .card-body
                    .row
                        .col-3
                            h5.card-title.title-small #{item.kegiatan}
                        .col-6
                            p.card-text.paragraph
                              p.h4|#{prettyDate(item.tanggalmulai)}
                              |-
                              p.h4|#{prettyDate(item.tanggalselesai)}
                        .col-3
                            a.btn-2(type='button',href='/jadwaladmin/update/'+item.id) UPDATE
                            div
                                form.w-35.mx-auto.d-block(action='/jadwaladmin/'+item.id, method='post', enctype='application/x-www-form-urlencoded')
                                    button.btn-2.d-block.mx-auto(type='submit') DELETE
                            div(style='margin-top:15px;')
                        .small-space
        .card.w-75
          .card-body
            button.btn-2(onclick="location.href='/addjadwal'") ADD NEW
        .small-space
    footer